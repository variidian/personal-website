    margin-bottom: 10px;
}
* {
text-align: left;
color: rgb(255, 255, 255);
font-family: "Inconsolata", monospace;
font-optical-sizing: auto;
font-variation-settings:
    "wdth" 100;
}
body {
background-color: #303D32;
opacity: 1;
background-image:  linear-gradient(#1B2725 1.9000000000000001px, transparent 1.9000000000000001px), linear-gradient(to right, #1B2725 1.9000000000000001px, #303D32 1.9000000000000001px);
