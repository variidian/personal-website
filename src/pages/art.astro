background-repeat: repeat;
margin: 0;
padding: 0;
}
a {
color: rgb(202, 222, 151);
font-style: italic;
}
ul {
list-style-type: none;
padding: 0;
margin: 0;
}
div.gallery {
display: flex;
flex-wrap: wrap;
justify-content: space-between;
}
div.gallery a {
display: flex;
flex-wrap: wrap;
justify-content: space-between;
}
img.gallery{
    max-width: 45%;
    max-height: 45%;
    margin-bottom: 10%;
    border: 3px solid rgb(202, 222, 151);
}
img.sidebar {
  position: absolute;
  width: auto; 
  height: auto;
  z-index: 1000;
}
img.sidebar:hover {
  box-shadow: 0 0 0 0 !important;
}
@media (max-width: 672px) {
  img.sidebar {
    display: none;
  }
}
</style>
